<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/2.3.5/js/dataTables.buttons.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/2.3.5/js/buttons.html5.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.70/pdfmake.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.70/vfs_fonts.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.3.5/css/buttons.dataTables.min.css">

@{
    ViewData["Title"] = "AccountDetails";
    Layout = "~/Views/Shared/_UserDashboard.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @if (Model == null)
        {
            <p>Please Create Bank Account</p>
        }
        else
        {
            <div class="text-center text-primary rounded p-2 mt-2 mb-2 h3 bg-white">User Accounts Details</div>

            
            <table id="accountTable" class="display">
                <thead>
                    <tr>
                        <th>Your Account</th>
                        <th>Account Details</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Account Creation Date</td>
                        <td>@Model.Account_Creation_Date</td>
                    </tr>
                    <tr>
                        <td>Status</td>
                        <td class="@(Model.status == "OK" ? "bg-success" : "bg-danger")">@Model.status</td>
                    </tr>
                    <tr>
                        <td>Account Number</td>
                        <td>@Model.Account_Number</td>
                    </tr>
                    <tr>
                        <td>Balance</td>
                        <td>@Model.Balance</td>
                    </tr>
                    <tr>
                        <td>CNIC Number</td>
                        <td>@Model.User_CNIC</td>
                    </tr>
                    <tr>
                        <td>Name</td>
                        <td>@Model.Account_User_Name</td>
                    </tr>
                    <tr>
                        <td>Email address</td>
                        <td>@Model.Account_User_Email</td>
                    </tr>
                    <tr>
                        <td>Country</td>
                        <td>@Model.Account_User_Country</td>
                    </tr>
                    <tr>
                        <td>City</td>
                        <td>@Model.Account_User_City</td>
                    </tr>
                    <tr>
                        <td>Phone Number</td>
                        <td>@Model.Account_User_Phone_Number</td>
                    </tr>
                    <tr>
                        <td>Nationality</td>
                        <td>@Model.User_Nationality</td>
                    </tr>
                    <tr>
                        <td>Account Name</td>
                        <td>@Model.Account_Name</td>
                    </tr>
                    <tr>
                        <td>Bank Location</td>
                        <td>@Model.BankLocation</td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</div>




<script>
    $(document).ready(function () {
        var table = $('#accountTable').DataTable({
            
            
            dom: 'Bfrtip',
            buttons: [
                'pdf'
            ],
            
            paging: false,
            info: false,
            searching: false,
        });

    });
</script>



